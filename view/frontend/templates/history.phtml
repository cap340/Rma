        <table class="data table table-order-items orders-history" id="requests-table">
            <caption class="caption"><?php echo __('Records'); ?></caption>
            <thead>
                <tr>
                    <th scope="col" class="col id"><?php echo __('ID'); ?></th>
                </tr>
            </thead>
            <tbody>
                <?php /** @var \Cap\Rma\Model\Request $request */ ?>
